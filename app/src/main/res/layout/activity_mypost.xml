<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.firebase.MypostActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:background="@color/btn_login"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/listViewPost"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="89dp"
            android:layout_height="82dp"
            app:srcCompat="@drawable/ic_man"
            app:layout_constraintRight_toLeftOf="@+id/desText"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="14dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/startText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="14dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/desText"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="TextView"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/desText"
            app:layout_constraintRight_toRightOf="@+id/startText"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/startText"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/startText"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:text="TextView"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/desText"
            android:layout_marginEnd="58dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="9dp" />

        <TextView
            android:id="@+id/desText"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:text="TextView"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/desText"
            android:layout_marginTop="89dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/desText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/listViewPost"
        android:layout_width="0dp"
        android:layout_height="430dp"
        android:background="@color/btn_login_bg"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="138dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
